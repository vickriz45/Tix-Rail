<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Baris 1: Nama Kereta dan Kode Pemesanan -->
        <TextView
            android:id="@+id/text_kereta_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Gatotkaca (876)" />

        <TextView
            android:id="@+id/text_kode_kereta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_kereta_nama"
            tools:text="Kode Kereta : 609" />


        <!-- Garis Pemisah -->

        <TextView
            android:id="@+id/text_harga_mulai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Mulai Dari :"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/divider"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_harga_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 150.000"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_kode_kereta"
            app:layout_constraintStart_toStartOf="@+id/text_harga_mulai"
            app:layout_constraintTop_toBottomOf="@+id/text_kereta_nama" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#EEEEEE"
            app:layout_constraintTop_toBottomOf="@id/text_kode_kereta"
            tools:layout_editor_absoluteX="16dp" />

        <!-- Baris 2: Rute (Bekasi -> Madiun) -->
        <TextView
            android:id="@+id/text_stasiun_asal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            tools:text="Bekasi" />

        <!-- Ikon Tanda Hubung / Panah -->
        <ImageView
            android:id="@+id/icon_rute"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/outline_arrow_forward_24"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toEndOf="@id/text_stasiun_asal"
            app:layout_constraintEnd_toStartOf="@id/text_stasiun_tujuan"
            app:layout_constraintTop_toTopOf="@id/text_stasiun_asal"
            app:layout_constraintBottom_toBottomOf="@id/text_stasiun_asal"
            android:contentDescription="Rute" />

        <TextView
            android:id="@+id/text_stasiun_tujuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_stasiun_asal"
            tools:text="Madiun" />

        <!-- Baris 3: Waktu dan Tanggal -->
        <TextView
            android:id="@+id/text_waktu_berangkat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_stasiun_asal"
            tools:text="08:00" />

        <TextView
            android:id="@+id/text_tanggal_berangkat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_waktu_berangkat"
            tools:text="Sen, 9 Juni 2025" />

        <TextView
            android:id="@+id/text_waktu_tiba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_waktu_berangkat"
            tools:text="16:37" />

        <TextView
            android:id="@+id/text_tanggal_tiba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_waktu_tiba"
            tools:text="Sen, 9 Juni 2025" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>