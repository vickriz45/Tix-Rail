<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1565C0"
    tools:context=".TiketSayaFragment">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@android:color/white"
        android:contentDescription="Tombol kembali"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Boarding Pass"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/tv_train_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Kereta ( seri )"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_booking_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Kode pemesanan : XXXXXX"
                android:textSize="12sp"
                android:textColor="#757575"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_train_name" />

            <View
                android:id="@+id/line_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#EEEEEE"
                app:layout_constraintTop_toBottomOf="@id/tv_booking_code" />

            <TextView
                android:id="@+id/tv_label_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Asal"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line_separator" />

            <TextView
                android:id="@+id/tv_label_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tujuan"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_label_origin" />

            <View
                android:id="@+id/dot_origin"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/dot_shape_purple"
                app:layout_constraintStart_toStartOf="@id/tv_label_origin"
                app:layout_constraintTop_toBottomOf="@id/tv_label_origin" />

            <View
                android:id="@+id/dot_destination"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/dot_shape_empty"
                app:layout_constraintEnd_toEndOf="@id/tv_label_destination"
                app:layout_constraintTop_toBottomOf="@id/tv_label_destination" />

            <TextView
                android:id="@+id/tv_route_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text=" â†’ "
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@id/dot_origin"
                app:layout_constraintBottom_toBottomOf="@id/dot_origin"
                app:layout_constraintStart_toEndOf="@id/dot_origin"
                app:layout_constraintEnd_toStartOf="@id/dot_destination"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_departure_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="08:00"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dot_origin" />

            <TextView
                android:id="@+id/tv_departure_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sen, 9 Juni 2025"
                android:textColor="#757575"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_departure_time" />

            <TextView
                android:id="@+id/tv_arrival_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="16:37"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dot_destination" />

            <TextView
                android:id="@+id/tv_arrival_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sen, 9 Juni 2025"
                android:textColor="#757575"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_arrival_time" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/card_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penumpang"
                android:textColor="#757575"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_passenger_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Alvin Hutapea"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_class_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="EKONOMI (PREMIUM)"
                android:textColor="#757575"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="12345678"
                android:textSize="12sp"
                android:textColor="#444444"/>


            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="QR Code Boarding Pass"
                android:src="@drawable/qr_code" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/rounded_hole_shape"
        app:layout_constraintStart_toStartOf="@id/card_top"
        app:layout_constraintTop_toBottomOf="@id/card_top"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="-8dp"
        android:elevation="3dp" />

    <View
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/rounded_hole_shape"
        app:layout_constraintEnd_toEndOf="@id/card_top"
        app:layout_constraintTop_toBottomOf="@id/card_top"
        android:layout_marginEnd="-8dp"
        android:layout_marginTop="-8dp"
        android:elevation="3dp" />

    <TextView
        android:id="@+id/eboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Boarding Pass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_bottom"
        android:textColor="#FFFFFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>