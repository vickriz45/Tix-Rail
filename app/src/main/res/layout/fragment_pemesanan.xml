<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:padding="20dp">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pemesanan Tiket Kereta"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textNamaKereta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Kereta: -"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textKodeKereta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode Kereta: -"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textNamaKereta"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga: -"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textKodeKereta"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/lineSeparator"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textHarga"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/labelNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/lineSeparator"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/inputNama"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:hint="Masukkan nama lengkap"
            app:layout_constraintTop_toBottomOf="@+id/labelNama"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/labelTelepon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/inputNama"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/inputTelepon"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:padding="12dp"
            android:hint="Masukkan nomor telepon"
            app:layout_constraintTop_toBottomOf="@+id/labelTelepon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnPesan"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:text="Pesan Tiket"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputTelepon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
